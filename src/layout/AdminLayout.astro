---
import Layout from './Layout.astro';
import { isAdmin } from '../lib/supabase';

// Check if user is admin
const userIsAdmin = await isAdmin();

// Redirect if not admin
if (!userIsAdmin) {
  return Astro.redirect('/login');
}
---

<Layout>
  <div class="min-h-screen bg-gray-50">
    <nav class="bg-primary-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <a href="/" class="text-white font-bold text-xl">Academia</a>
            </div>
            <div class="hidden md:block">
              <div class="ml-10 flex items-baseline space-x-4">
                <a href="/admin" class="text-white hover:bg-primary-800 px-3 py-2 rounded-md text-sm font-medium">Dashboard</a>
                <a href="/admin/students" class="text-white hover:bg-primary-800 px-3 py-2 rounded-md text-sm font-medium">Students</a>
                <a href="/admin/courses" class="text-white hover:bg-primary-800 px-3 py-2 rounded-md text-sm font-medium">Courses</a>
                <a href="/admin/ebooks" class="text-white hover:bg-primary-800 px-3 py-2 rounded-md text-sm font-medium">E-Books</a>
              </div>
            </div>
          </div>
          <div class="hidden md:block">
            <div class="ml-4 flex items-center md:ml-6">
              <a href="/api/auth/signout" class="text-white hover:bg-primary-800 px-3 py-2 rounded-md text-sm font-medium">Sign out</a>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <slot />
    </main>
  </div>
</Layout>